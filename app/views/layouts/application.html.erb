<!DOCTYPE html>
<html>
  <head>
    <title>ReviewSpa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="turbolinks-cache-control" content="no-cache">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/spas/top">スパレビ</a>
            <p class="navbar-text">スーパー銭湯のレビューサイト</p>
          </div>
          <div class="collapse navbar-collapse" id="navbarEexample">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li><p class="navbar-text"><%= current_user.nickname %> 様 </p><li>
                <li><%= link_to "マイページ", user_path(current_user) %><li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout"  %><li>
              <% else %>
                <li class=""><%= link_to "新規登録", new_user_registration_path, class: "sign_up" %></li>
                <li class=""> <%= link_to "ログイン", new_user_session_path, class: "sign_in"  %></li>
              <% end %>
           </ul>
          </div>
        </div>
      </nav>
    </header>
      <%= yield %>
    <footer>
    </footer>
    </body>
</html>
