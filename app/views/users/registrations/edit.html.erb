<div class="col-xs-1">
</div>

<div class="col-xs-10">
  <div class="main-header">
    <h2>ユーザ編集</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

      <table class="table">
        <tbody>
          <tr>
            <th><%= f.label "ニックネーム" %></th>
            <td><%= f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム", :size=>"50" %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :user_name, autofocus: true, autocomplete: "氏名", :size=>"50" %></td>
          </tr>
          <tr>
            <th>カナ氏名</th>
            <td><%= f.text_field :kana_name, autofocus: true, autocomplete: "カナ氏名", :size=>"50" %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= f.select :gender, User.genders.keys, {prompt: '選択してください'} %></td>
          </tr>
          <tr>
            <th>年代</th>
            <td><%= f.select :age, User.ages.keys, {prompt: '選択してください'} %></td>
          </tr>
          <tr>
            <th>在住エリア</th>
            <td><%= f.collection_select :area_id, Area.all, :id, :prefecture_and_area_name, {prompt: '選択してください'} %></td>
          </tr>
          <tr>
            <th><%= f.label "メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", :size=>"50" %></td>
          </tr>
          <tr>
            <th><%= f.label "新パスワード" %></th>
            <td><%= f.password_field :password, autocomplete: "パスワード", :size=>"50" %></td>
          </tr>
          <tr>
            <th><%= f.label "新パスワード再入力" %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "パスワード再入力", :size=>"50" %></td>
          </tr>
          <tr>
            <th><%= f.label "旧パスワード入力" %></th>
            <td><%= f.password_field :current_password, autocomplete: "旧パスワード入力", :size=>"50" %></td>
          </tr>
        </tbody>
      </table>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="actions">
      <%= f.submit "更新", class: 'confirm_btn' %>
      <%= link_to "戻る", user_path(current_user), class: 'back_btn', style: "margin-left: 20px;"%>
    </div>
    </br>
    <%= link_to "退会についてはコチラ", withdraw_confirm_path(current_user) %>
  <% end %>
</div>

<div class="col-xs-1">
</div>



